<h1 class="title">Registration</h1>

<div class="row justify-content-center">
  <%= form_with(url: register_path, model: @customer, :class =>"col-md-5 p-5 mt-2 mb-2", local: true) do |form| %>
    <% if @customer.errors.any? %>
      <div id="error_explanation">
        <ul class="alert alert-danger alert-dismissible fade show">
          <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h3>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <strong><%= form.label :name %></strong><br>
      <p><%= form.text_field :name %></p>
    </div>

    <div class="field">
      <strong><%= form.label :address %></strong><br>
      <p><%= form.text_area :address %></p>
    </div>

    <div class="field">
      <strong><%= form.label :email %></strong><br>
      <p><%= form.text_field :email %></p>
    </div>

    <div class="field">
      <strong><%= form.label :contact_number %></strong><br>
      <p><%= form.text_field :contact_number %></p>
    </div>
  
    <div class="field">
      <strong><%= form.label :password %></strong><br>
      <p><%= form.password_field :password %></p>
    </div>
    
    <div class="field">
      <strong><%= form.label :password_confirmation %></strong><br>
      <p><%= form.password_field :password_confirmation %></p>
    </div>
    <br>

    <div class="actions text-center">
      <%= form.submit "Create my account", :class =>"btn btn-primary" %>
    </div>
    <br>
    
    <p>Already have account? Please<%=link_to"Sign in.", login_path %></p>
  <% end %>
</div>


