<h1 class="title">Admin Log In</h1>

<div class="row justify-content-center">
  <%= form_tag "/admin/login", :class =>"col-md-5 p-5 mt-2" do %>
    <% if flash[:alert].present? %>
        <p class="alert alert-danger alert-dismissible fade show">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </p>
    <% end %>

    <strong><label>Email :</label></strong><br>
    <p><%= email_field_tag "email" %></p>
  
    <strong><label>Password :</label></strong><br>
    <p><%= password_field_tag "password" %></p>
    <br>
  
    <div>
      <%= submit_tag "Log In", :class =>"btn-save-changes" %>
    </div>
    <br>
    
    <p>Not an admin?<%=link_to"Log in", login_path %>as a customer now.</p>
  <% end %>
</div>