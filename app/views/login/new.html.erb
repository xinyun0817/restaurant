<h1 class="title">Log In</h1>

<div class="row justify-content-center">
  <%= form_tag "/login", :class =>"col-md-5 p-5 mt-2" do %>
  
    <strong><label>Email :</label></strong><br>
    <p><%= email_field_tag "email" %></p>
  
    <strong><label>Password :</label></strong><br>
    <p><%= password_field_tag "password" %></p>
    
    <p><%=link_to"Forgotten Password?", forgotten_password_new_path %></p>
  
    <div>
      <%= submit_tag "Log In", :class =>"btn-save-changes" %>
    </div>
    <br>
    
    <p>Don't have account yet?<%=link_to "Register Now!", register_path %></p>
  <% end %>
</div>
